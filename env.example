# ========================================
# CONFIGURACIÓN DE LA DULCERÍA - PLANTILLA
# ========================================
# Copia este archivo como .env y configura tus valores

# Clave secreta de Django (CAMBIAR EN PRODUCCIÓN)
SECRET_KEY=tu-secret-key-aqui-cambiar-en-produccion

# Modo de desarrollo (True/False)
DEBUG=True

# Configuración de base de datos
USE_MYSQL=True

# Motor de base de datos
DB_ENGINE=django.db.backends.mysql

# Nombre de la base de datos
DB_NAME=dulceria_db

# Usuario de MySQL (normalmente 'root')
DB_USER=root

# Contraseña de MySQL (dejar vacío si no tiene contraseña)
DB_PASSWORD=

# Host de MySQL (localhost para instalación local)
DB_HOST=localhost

# Puerto de MySQL (3306 es el puerto por defecto)
DB_PORT=3306
